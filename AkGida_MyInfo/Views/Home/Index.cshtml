                {
                    <article class="style07">
                        <span class="image">
                            <img src="~/Template/images/pic02.jpg" alt="" />
                        </span>

                        <a href="@Url.Action("Departments", "Home", new { companyid = item.CompanyID })">

                            <h6 style="font-size:smaller">@item.CompanyName</h6>

                            <div class="content">
                                <p style="font-size:14px;">
                                    <b>@item.CompanyType</b> <br />
                                    @item.CompanyAddress<br />
                                    <b>Telefon:</b> @item.CompanyTel
                                </p>
                            </div>
                        </a>
                    </article>
                }
            </section>
        </div>
    </div>
</div>







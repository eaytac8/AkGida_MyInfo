@model IEnumerable<AkGida_MyInfo.Models.Departments>

@{
    ViewBag.Title = "Departman Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<p>
    <a href="/DepartmentYonetim/Create" button type="button" class="btn btn-primary">Departman Ekle</a>
</p>



<div class="table-responsive">
    <table class="table table-bordered nomargin">
        <thead>
            <tr>
                <th>Departman</th>
                <th>Lokasyon</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DepartmentName</td>
                    <td>@item.Companies.CompanyName</td>
                    <td>
                        <a href="/DepartmentYonetim/Edit/@item.DepartmentID" class="btn btn-info btn-xs"><i class="fa fa-edit white"></i> Düzenle </a>
                        <a href="/DepartmentYonetim/Delete/@item.DepartmentID" class="btn btn-danger btn-xs"><i class="fa fa-times white"></i> Sil </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>





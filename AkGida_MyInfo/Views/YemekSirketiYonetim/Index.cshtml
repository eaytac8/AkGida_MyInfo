@model IEnumerable<AkGida_MyInfo.Models.YemekSirketi>

@{
    ViewBag.Title = "Yemek Şirketi Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <a href="/YemekSirketiYonetim/Create" button type="button" class="btn btn-primary">Yemek Şirketi Ekle</a>
</p>


<div class="table-responsive">
    <table class="table table-bordered nomargin">
        <thead>
            <tr>
                <th>Yemek Şirketi</th>
                <th>Şube</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.YemekSirketiAdi</td>
                    <td>@item.Companies.CompanyName</td>
                    <td>
                        <a href="/YemekSirketiYonetim/Edit/@item.YemekSirketiID" class="btn btn-info btn-xs"><i class="fa fa-edit white"></i> Düzenle </a>
                        <a href="/YemekSirketiYonetim/Delete/@item.YemekSirketiID" class="btn btn-danger btn-xs"><i class="fa fa-times white"></i> Sil </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

@model IEnumerable<AkGida_MyInfo.Models.Servis>

@{
    ViewBag.Title = "Servis Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <a href="/ServisYonetim/Create" button type="button" class="btn btn-primary">Servis Ekle</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered nomargin">
        <thead>
            <tr>
                <th>Şoför Adı</th>
                <th>Şoför Soyadı</th>
                <th>Telefon</th>
                <th>Plaka</th>
                <th>Güzergah</th>
                <th>Lokasyon</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SoforAdi</td>
                    <td>@item.SoforSoyadi</td>
                    <td>@item.Telefon</td>
                    <td>@item.Plaka</td>
                    <td>@item.Guzergah</td>
                    <td>@item.Companies.CompanyName</td>
                    <td>
                        <a href="/ServisYonetim/Edit/@item.ServisID" class="btn btn-info btn-xs"><i class="fa fa-edit white"></i> Düzenle </a>
                        <a href="/ServisYonetim/Delete/@item.ServisID" class="btn btn-danger btn-xs"><i class="fa fa-times white"></i> Sil </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

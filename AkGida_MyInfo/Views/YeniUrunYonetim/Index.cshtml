@model IEnumerable<AkGida_MyInfo.Models.YeniUrun>

@{
    ViewBag.Title = "Yeni Ürün Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <a href="/YeniUrunYonetim/Create" button type="button" class="btn btn-primary">Yeni Ürün Ekle</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered nomargin">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Tanıtım</th>
                <th>Resim Yolu</th>
                <th>Video Yolu</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UrunAdi</td>
                    <td>@item.Tanitim</td>
                    <td>@item.ResimYolu</td>
                    <td>@item.VideoYolu</td>
                    <td>
                        <a href="/YeniUrunyonetim/Edit/@item.UrunID" class="btn btn-info btn-xs"><i class="fa fa-edit white"></i> Düzenle </a>
                        <a href="/YeniUrunYonetim/Delete/@item.UrunID" class="btn btn-danger btn-xs"><i class="fa fa-times white"></i> Sil </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

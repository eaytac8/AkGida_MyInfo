@model IEnumerable<AkGida_MyInfo.Models.UserViewModel>
@{
    ViewBag.Title = "Admin Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <a href="/Account/Register" button type="button" class="btn btn-primary">Admin Ekle</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered nomargin">
        <thead>
            <tr>
                <th>Rol</th>
                <th>E-mail</th>
                @*<th>Kullanıcı Adı</th>*@
                @*<th>İşlemler</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Role</td>
                    <td>@item.Email</td>
                    @*<td>@item.Username</td>*@
                    @*<td>
                        <a href="/Account/AdminEdit/@item.Email" class="btn btn-info btn-xs"><i class="fa fa-edit white"></i> Düzenle </a>
                        <a href="/Account/Delete/@item.Username" class="btn btn-danger btn-xs"><i class="fa fa-times white"></i> Sil </a>
                    </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>

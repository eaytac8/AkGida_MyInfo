@model IEnumerable<AkGida_MyInfo.Models.Hakkimizda>

@{
    ViewBag.Title = "Hakkımızda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <a href="/HakkimizdaYonetim/Create" button type="button" class="btn btn-primary">Hakkımızda Ekle</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered nomargin">
        <thead>
            <tr>
                <th>İçerik</th>
                <th>Resim Yolu</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Icerik</td>
                    <td>@item.ResimYolu</td>
                    <td>
                        <a href="/HakkimizdaYonetim/Edit/@item.HakkimizdaID" class="btn btn-info btn-xs"><i class="fa fa-edit white"></i> Düzenle </a>
                        <a href="/HakkimizdaYonetim/Delete/@item.HakkimizdaID" class="btn btn-danger btn-xs"><i class="fa fa-times white"></i> Sil </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
    .grid-container {
        display: grid;
        grid-template-columns: auto auto auto;
        background-color: #18c1b6;
        padding: 3px;
    }

    .grid-item {
        /*background-color: rgba(255, 255, 255, 0.8);*/
        background-color: rgb(255, 255, 255);

@model IEnumerable<AkGida_MyInfo.Models.Yayinlar>

@{
    ViewBag.Title = "Yayın Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <a href="/YayinlarYonetim/Create" button type="button" class="btn btn-primary">Yayın Ekle</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered nomargin">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Yayın URL</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.YayinBaslik</td>
                    <td>@item.YayinURL</td>
                    <td>
                        <a href="/YayinlarYonetim/Edit/@item.YayinID" class="btn btn-info btn-xs"><i class="fa fa-edit white"></i> Düzenle </a>
                        <a href="/YayinlarYonetim/Delete/@item.YayinID" class="btn btn-danger btn-xs"><i class="fa fa-times white"></i> Sil </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
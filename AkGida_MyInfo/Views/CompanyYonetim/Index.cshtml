@model IEnumerable<AkGida_MyInfo.Models.Companies>

@{
    ViewBag.Title = "Şube Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    @*@Html.ActionLink("Yeni Şube Oluştur", "Create")*@
    <a href="/CompanyYonetim/Create" button type="button" class="btn btn-primary">Şube Ekle</a>
</p>


<div class="table-responsive">
    <table class="table table-bordered nomargin">
        <thead>
            <tr>
                <th>Şube Adı</th>
                <th>Adres</th>
                <th>Tür</th>
                <th>Telefon</th>
                <th>İşlemler</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CompanyName</td>
                    <td>@item.CompanyAddress</td>
                    <td>@item.CompanyType</td>
                    <td>@item.CompanyTel</td>

                    <td align="center">
                        <a href="/CompanyYonetim/Edit/@item.CompanyID" class="btn btn-info btn-xs"><i class="fa fa-edit white"></i> Düzenle </a>
                        <a href="/CompanyYonetim/Delete/@item.CompanyID" class="btn btn-danger btn-xs"><i class="fa fa-times white"></i> Sil </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

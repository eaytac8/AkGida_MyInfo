@model IEnumerable<AkGida_MyInfo.Models.Weddings>

@{
    ViewBag.Title = "Davetiye Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <a href="/WeddingsYonetim/Create" button type="button" class="btn btn-primary">Davetiye Ekle</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered nomargin">
        <thead>
            <tr>
                <th>Adı</th>
                <th>Soyadı</th>
                <th>Başlangıç Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>Resim Yolu</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td>@item.ImagePath</td>

                    <td align="center">
                        <a href="/WeddingsYonetim/Edit/@item.WeddingID" class="btn btn-info btn-xs"><i class="fa fa-edit white"></i> Düzenle </a>
                        <a href="/WeddingsYonetim/Delete/@item.WeddingID" class="btn btn-danger btn-xs"><i class="fa fa-times white"></i> Sil </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


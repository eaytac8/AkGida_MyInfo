@model IEnumerable<AkGida_MyInfo.Models.Menu>

@{
    ViewBag.Title = "Menü Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <a href="/MenuYonetim/Create" button type="button" class="btn btn-primary">Menü Ekle</a>
</p>


<div class="table-responsive">
    <table class="table table-bordered nomargin">
        <thead>
            <tr>
                <th>Tarih</th>
                <th>Çorba</th>
                <th>Ana Yemek</th>
                <th>Diyet</th>
                <th>Pilav/Makarna</th>
                <th>Tatlı</th>
                <th>Meyve</th>
                <th>Salata</th>
                <th>Şube</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Tarih</td>
                    <td>@item.Corba</td>
                    <td>@item.AnaYemek</td>
                    <td>@item.Diyet</td>
                    <td>@item.PilavMakarna</td>
                    <td>@item.Tatli</td>
                    <td>@item.Meyve</td>
                    <td>@item.Salata</td>
                    <td>@item.Companies.CompanyName</td>
                    <td>
                        <a href="/MenuYonetim/Edit/@item.MenuID" class="btn btn-info btn-xs"><i class="fa fa-edit white"></i> Düzenle </a>
                        <a href="/MenuYonetim/Delete/@item.MenuID" class="btn btn-danger btn-xs"><i class="fa fa-times white"></i> Sil </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>










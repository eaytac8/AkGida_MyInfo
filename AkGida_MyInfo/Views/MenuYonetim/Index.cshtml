@model IEnumerable<AkGida_MyInfo.Models.Menu>

@{
    ViewBag.Title = "Menü Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <a href="/MenuYonetim/Create" button type="button" class="btn btn-primary">Menü Ekle</a>
</p>


<div class="table-responsive">
    <table class="table table-bordered nomargin">
        <thead>
            <tr>
                <th>Tarih</th>
                <th>Çorba 1</th>
                <th>Çorba 1</th>
                <th>Ana Yemek 1</th>
                <th>Ana Yemek 2</th>
                <th>Ana Yemek 3</th>
                <th>Ana Yemek 4</th>
                <th>Diyet</th>
                <th>Pilav</th>
                <th>Makarna</th>
                <th>Meyve</th>
                <th>Salata</th>
                <th>Fiyat</th>
                <th>Yemek Şirketi</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Tarih</td>
                    <td>@item.Corba1</td>
                    <td>@item.Corba2</td>
                    <td>@item.AnaYemek1</td>
                    <td>@item.AnaYemek2</td>
                    <td>@item.AnaYemek3</td>
                    <td>@item.AnaYemek4</td>
                    <td>@item.Ekstra</td>
                    <td>@item.Pilav</td>
                    <td>@item.Makarna</td>
                    <td>@item.Meyve</td>
                    <td>@item.Salata</td>
                    <td>@item.Fiyat</td>
                    <td>@item.YemekSirketi.YemekSirketiAdi</td>
                    <td>
                        <a href="/MenuYonetim/Edit/@item.MenuID" class="btn btn-info btn-xs"><i class="fa fa-edit white"></i> Düzenle </a>
                        <a href="/MenuYonetim/Delete/@item.MenuID" class="btn btn-danger btn-xs"><i class="fa fa-times white"></i> Sil </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>










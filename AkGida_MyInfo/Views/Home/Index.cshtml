@*Companies*@

@foreach (var item in from i in Model.Companylerim.Select((value, index) => new { value, index }) group i.value by i.index / 6 into g select g)
{

    <div class="container-fluid">
        <div class="row">

            @foreach (var c_item in item)
            {
                <div class="col-md-2 col-md-2 col-md-2">
                    <div class="thumbnail">
                        <div class="box-icon box-icon-center box-icon-transparent box-icon-large">
                            <a class="box-icon-title" href="@Url.Action("Departments", "Home", new { companyid = c_item.CompanyID })">
                                <i class="fa fa-puzzle-piece"></i>
                                <h2>@c_item.CompanyName</h2>
                            </a>
                            <p class="text-muted">
                                <b>@c_item.CompanyType</b> <br />
                                @c_item.CompanyAddress<br />
                                <b>Telefon:</b> @c_item.CompanyTel
                            </p>
                        </div>
                    </div>
                </div>

            }

        </div> <!-- End row -->
    </div><!-- End container -->

}
